<HEADER>
	<h1 Class="h2">Machine Search</h1>
</HEADER>

<section class="search-form">
	<%= form_for :machines, method: :get do |f| %>
		<div class="input-group input-group-lg">
			<%= label_tag :keywords, nil, class: "sr-only" %>
			<%= text_field_tag :keywords, nil, placeholder: "machine Name, ip address", class: "form-control input-lg" %>
				<span class="input-group-btn">
					<%= submit_tag "Find Machines", class: "btn btn-primary btn-lg" %>
				</span>
		</div>
	<% end %>
</section>

<section class="search-results">
<header>
	<h1 class="h3">Results</h1>
</header>
<table class="table table-striped">
	<thead>
		<tr>
			<th>Machine Name</th>
			<th>Ip Address</th>
			<th>MAC Address</th>
			<th>Make</th>
			<th>Model</th>
			<th>Serial Number</th>
		</tr>
	</thead>
<tbody>
	<% @machines.each do |machine| %>
	<tr>
		<td><%= machine.machine_name %></td>
		<td><%= machine.ip_address %></td>
		<td><%= machine.mac_address %></td>
		<td><%= machine.machine_make %></td>
		<td><%= machine.machine_model %></td>
		<td><%= machine.machine_serialno %></td>
	</tr>
	<% end %>
</tbody>
</table>
</section>