<HEADER>
	<h1 Class="h2">Machine Search</h1>
</HEADER>

<section class="search-form">
	<%= form_for :machines, method: :get do |f| %>
		<div class="input-group input-group-lg">
			<%= label_tag :keywords, nil, class: "sr-only" %>
			<%= text_field_tag :keywords, nil, placeholder: "machine Name, ip address", class: "form-control input-lg" %>
				<span class="input-group-btn">
					<%= submit_tag "Find Machines", class: "btn btn-primary btn-lg" %>
				</span>
		</div>
	<% end %>
</section>

<section class="search-results">
<header>
	<h1 class="h3">Results</h1>
</header>
<% if @machines.present? %>
	<%= render partial: "pager", locals: { keywords: @keywords, page: @page } %>
<% end %>
<ol class="list-group">
	<% @machines.each do |machine| %>
		<li class="list-group-item clearfix">
			<h3 class="pull-right">
				<small class="text-uppercase">Added</small> <%= l machine.created_at.to_date %>
			</h3>
			<h2 class="h3">
				<%= machine.machine_name %> <%= machine.ip_address %>
			<small><%= machine.mac_address %></small>
		</h2>
			<h5><%= machine.machine_serialno %></h5>
			
		</li>
	<% end %>
</ol>
<% if @machines.present? %>
	<%= render partial: "pager", locals: { keywords: @keywords, page: @page } %>
<% end %>
</section>


